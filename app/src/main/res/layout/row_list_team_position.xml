<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="0.5dp"
        card_view:cardElevation="0dp"
        card_view:cardMaxElevation="0dp"
        card_view:cardUseCompatPadding="false"
        card_view:cardBackgroundColor="@color/primary">

        <LinearLayout
            android:id="@+id/linear_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                     />

                <ImageView
                    android:id="@+id/ic_escudo"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:layout_width="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/abc_btn_radio_material"
                     />

                <TextView
                    android:id="@+id/team_name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Pases"
                    android:maxLines="1"
                    android:textSize="12dp"
                    android:textColor="@color/cardview_light_background"
                     />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/table_pj"
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="40"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorAccent"

                    />

                <TextView
                    android:id="@+id/table_g"
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="20dp"
                    android:text="40"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorAccent"

                    />
                <TextView
                    android:id="@+id/table_e"
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="40"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorAccent"

                    />

                <TextView
                    android:id="@+id/table_p"
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="40"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                     />

                <TextView
                    android:id="@+id/table_pts"
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="40"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    />

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>